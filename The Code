#include <Servo.h> 
#include <Ultrasonic.h>

int distance;
Ultrasonic ultrasonic_one(D8, D5);
#define motor1pin D0
#define motor2pin D2 

Servo motor1; 
Servo motor2;

void forward(int time)

{

      motor1.write(0);
      motor2.write(180);
      delay(time);
      motor1.write(90);
      motor2.write(90);

}

void backward(int time)

{

      motor1.write(180);
      motor2.write(180);
      delay(time);
      motor1.write(90);
      motor2.write(90);

}
void right(int time)

{

      motor1.write(180);
      motor2.write(180);
      delay(time);
      motor1.write(90);
      motor2.write(90);

}
void left(int time)

{

      motor1.write(0);
      motor2.write(0);
      delay(time);
      motor1.write(90);
      motor2.write(90);

}

 //250 milliseconds translates into 90 degrees

void setup()
{
      motor1.attach(motor1pin); 
      motor2.attach(motor2pin);
      motor1.write(90); 
      motor2.write(90);
      Serial.begin(115200);
}


void loop() 
{
      distance = ultrasonic_one.read(CM)* 10;

      Serial.println(distance);

      delay(1000);
}
